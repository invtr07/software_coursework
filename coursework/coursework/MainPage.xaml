<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="coursework.MainPage"
             Title="Analytic Hierarchy Process">

    <StackLayout>
       <ListView x:Name="ListView" RowHeight="90" VerticalOptions="CenterAndExpand" ItemTapped="ListView_ItemTapped">
        <ListView.ItemTemplate>
            <DataTemplate>
                    <TextCell Text="{Binding Title}" Detail="{Binding Descr}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>

