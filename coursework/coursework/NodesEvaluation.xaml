<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="coursework.NodesEvaluation">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Paired Comparisons:"
            FontAttributes="Bold"
            HorizontalOptions="CenterAndExpand" FontSize="Large" Margin="10"/>
            
            <Label Text="Use switches to indicate pairwise preferences. Select the preference strength from the picker."
                   HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" FontSize="17" Margin="10"/>
            
            <ScrollView Margin="10">
                <StackLayout BindableLayout.ItemsSource="{Binding}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="10" Padding="5" HasShadow="True" BackgroundColor="Transparent" >
                                <StackLayout Spacing="10">
                                    <!-- Top Part of the Comparison -->
                                    <StackLayout Orientation="Horizontal" Spacing="10">
                                        <Label Text="{Binding Child1.Name}" FontSize="15" VerticalOptions="Center" HorizontalOptions="Start" WidthRequest="130"/>
                                        <Switch IsToggled="{Binding Toggled, Mode=TwoWay}" VerticalOptions="Center" HorizontalOptions="CenterAndExpand"/>
                                        <Label Text="{Binding Child2.Name}" FontSize="15" VerticalOptions="Center" HorizontalOptions="End" WidthRequest="130"/>
                                    </StackLayout>

                                    <!-- Picker for selecting preference -->
                                    <Picker SelectedIndex="{Binding Preference, Mode=TwoWay}" HorizontalOptions="Center" WidthRequest="220">
                                        <Picker.Items>
                                            <x:String>1 - Equal preference</x:String>
                                            <x:String>2 - Moderate preference</x:String>
                                            <x:String>3 - Moderate preference</x:String>
                                            <x:String>4 - Strong preference</x:String>
                                            <x:String>5 - Strong preference</x:String>
                                            <x:String>6 - Very Strong preference</x:String>
                                            <x:String>7 - Very Strong preference</x:String>
                                            <x:String>8 - Extreme preference</x:String>
                                            <x:String>9 - Extreme preference</x:String>
                                        </Picker.Items>
                                    </Picker>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
            </ScrollView>

            <Button Text="SAVE"
                    Margin="10"
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="LightSeaGreen"
                    VerticalOptions="EndAndExpand"
                    Clicked="Button_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>